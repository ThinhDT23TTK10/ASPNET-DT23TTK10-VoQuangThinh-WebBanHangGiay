@model PagedList.PagedList<BanHangThoiTrangMVC.Models.EF.News>
@using PagedList.Mvc;
@using PagedList;
@{
    ViewBag.Title = "Index";
}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">
<!-- Slider -->
<style>
    .news_section_container {
        margin-top: 180px;
    }

    .row-item-new {
        margin-bottom: 20px;
    }

    .title-news {
        font-size: 24px;
        border-bottom: 1px solid;
        padding: 15px 0;
        margin-bottom: 25px;
    }

    .img-box img {
        max-width: 100%;
        max-height: 100%;
    }
</style>
<div class="container news_section_container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="title-news">Tin tức</h1>
        </div>
    </div>
    @if (Model != null && Model.Any())
    {
        foreach (var item in Model)
        {
            <div class="row row-item-new">
                <div class="col-md-3">
                    <div class="img-box">
                        @if (!string.IsNullOrEmpty(item.Image))
                         {
                            <a href="chi-tiet-tin-tuc/@item.Alias-n@(item.Id)" title="@item.Title">
                                <img src="@item.Image" alt="@item.Title" />
                            </a>
                         }
                        else
                        {
                            @* <img src="~/Content/assets/images/no-image.png" alt="No image" /> *@
                        }
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="content-box">
                        <h3><a href="chi-tiet-tin-tuc/@item.Alias-n@(item.Id)" title="@item.Title">@item.Title</a></h3>
                        <div style="text-align:justify; display:-webkit-box; -webkit-line-clamp:5; -webkit-box-orient:vertical; overflow:hidden;">
                            @item.Description
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="row">
            <div class="col-6"></div>
            <div class="col-6" style="text-align:right;">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
            </div>
        </div>
    }

</div>
